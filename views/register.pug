extend default

block content
    .container-fluid
        h1#title Register
        hr(style="margin-bottom:5%;margin-top:5%;")
        form(method='POST',action="/auth/register",name='registerform')
            .form-group.row
                label(for="inputUsername3",class="col-sm-2 col-form-label")|Username 
                .col-sm-10
                    input(type="text", class="form-control",id="username",placeholder="Please input your username",name='username',required)

            .form-group.row
                label(for="inputEmail3",class="col-sm-2 col-form-label")|Email 
                .col-sm-10
                    input(type="email", class="form-control",id="email",placeholder="Please input your email",name='email',required)

            .form-group.row
                label(for="password",class="col-sm-2 col-form-label")|Password
                .col-sm-10
                    input(type="password", class="form-control",id="password",placeholder="Please input password",name='password',required)

            .form-group.row
                label(for="inputPasswordConf",class="col-sm-2 col-form-label")
                    |Confirm password
                .col-sm-10
                    input(type="password", class="form-control",id="inputPasswordConf",placeholder="Please confirm password",name='passwordconfirm',required)

            button(type="submit",class="btn btn-primary", id="registerNow" )|Register

    block append scripts
        script(src="/assets/js/validations.js")

        


